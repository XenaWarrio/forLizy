<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment"
    android:orientation="vertical">

    <EditText
        android:layout_margin="22dp"
        android:id="@+id/name_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введи имя окаянного"
        android:textSize="22sp"
        android:background="#FFFDCD"
       android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:layout_margin="22dp"
        android:id="@+id/reason_of_obidki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ну и что натворило это чудовище?"
        android:textSize="22sp"
        android:background="#FFFDCD"
        android:textStyle="italic"
        android:gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF2819"
            android:padding="8dp"
            android:text="Сохранить Обидку"
            android:textSize="30dp"
            android:textStyle="bold"
            />

   </FrameLayout>





</LinearLayout>